[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = black white bold
    frag = yellow
    old = red
    new = white bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[push]
    default = simple
[diff]
